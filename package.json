    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^7.1.0",
    "mongoose": "^8.0.0",
    "tailwindcss": "^4.2.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.29.0",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.2.2"
  }
