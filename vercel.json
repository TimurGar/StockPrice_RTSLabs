{
  "version": 2,
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "handle": "filesystem"
    },
    { 
      "src": "/404", 
      "dest": "/client/dist/index.html" 
    },
    {
      "src": "/(sign-in|sign-up|home)(.*)",
      "dest": "/client/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/index.html"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "client/dist"
}
